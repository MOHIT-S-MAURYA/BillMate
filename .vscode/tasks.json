{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter: Run Debug",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--debug"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Flutter: Build APK",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--release"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Flutter: Run Tests",
			"type": "shell",
			"command": "flutter",
			"args": [
				"test"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Flutter: Clean",
			"type": "shell",
			"command": "flutter",
			"args": [
				"clean"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Dart: Get Dependencies",
			"type": "shell",
			"command": "flutter",
			"args": [
				"pub",
				"get"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Dart: Generate Code",
			"type": "shell",
			"command": "dart",
			"args": [
				"run",
				"build_runner",
				"build",
				"--delete-conflicting-outputs"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Flutter: Analyze",
			"type": "shell",
			"command": "flutter",
			"args": [
				"analyze"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		}
	]
}